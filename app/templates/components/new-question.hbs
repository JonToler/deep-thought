{{#if addNewQuestion}}
<h1>Ask a New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="notes">notes</label>
      {{input value=notes id="notes"}}
    </div>

    <div class="form-group">
      <label for="post">post</label>
      {{input value=post id="post"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'saveQuestion'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
